    main.main.main--gray
      .widget
        .widget-menu.widget-menu__layout
          h1.widget-menu__header Weather for Moscow
          .widget-menu__links
            span More at
            a.widget-menu__link(href="//openweathermap.org/" target="_blank") OpenWeatherMap
        .widget__body
          .weather-card
            .weather-card__row1
              img.weather-card__img(src="img/10dbw.png" width="128" height="128" alt="Weather for Moscow")
              .weather-card__col
                p.weather-card__number 0
                 sup.weather-card__degree 0 
                span and rising
            .weather-card__row2
              p.weather-card__means -
              p.weather-card__wind Wind:
          .widget__calendar
            ul.calendar
              li.calendar__item Today
                img(src="img/11dbw@05x.png" width="32" height="32" alt="Today")
              li.calendar__item Sat              
                img(src="img/04dbw@05x.png" width="32" height="32" alt="Sat")
              li.calendar__item Sun
                img(src="img/09dbw@05x.png" width="32" height="32" alt="Sun")
              li.calendar__item Mon 
                img(src="img/01dbw@05x.png" width="32" height="32" alt="Mon")
              li.calendar__item Tue
                img(src="img/02dbw@05x.png" width="32" height="32" alt="Tue")
              li.calendar__item Wed
                img(src="img/02dbw@05x.png" width="32" height="32" alt="Wed")              
              li.calendar__item Thu
                img(src="img/10dbw@05x.png" width="32" height="32" alt="Thu")                            
              li.calendar__item Fri
                img(src="img/02dbw@05x.png" width="32" height="32" alt="Fri") 
            div.widget__graphic(id="graphic")
